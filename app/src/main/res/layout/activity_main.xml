<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draw_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblur"
    android:visibility="visible"
    tools:context=".MainActivity">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@drawable/backgroound">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:padding="10dp"
        android:text="Menu"
        android:textColor="#FF9800"
        android:textSize="36sp"
        android:textStyle="italic" />

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/iconpizza"
            android:padding="15dp" />



        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/custom_pizza" />

        <Button
            android:id="@+id/Move_card11"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:layout_marginTop="130dp"
            android:background="#00000000"
            android:text="Pizza"
            android:textColor="#FBFBFB"
            android:textSize="20dp"
            android:textStyle="italic" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/hamburger"
            android:padding="15dp" />



        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/custom_burger" />

        <Button
            android:id="@+id/Move_card22"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:background="#00000000"
            android:text="Burger"
            android:textColor="#FBFBFB"
            android:textSize="20dp"
            android:textStyle="italic" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/iconice"
            android:padding="15dp" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="135dp"
            android:background="@drawable/custom_ice" />

        <Button
            android:id="@+id/Move_card33"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:background="#00000000"
            android:layout_marginRight="10dp"
            android:text="gelato"
            android:textColor="#FBFBFB"
            android:textSize="16dp"
            android:textStyle="italic" />


    </RelativeLayout>

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_baseline_menu_24"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#F1EDED" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="260dp">

    </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeMsg1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".splashscreen">

    <TextView
        android:id="@+id/logo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="OrDer"
        android:textColor="#FFFFFF"
        android:textSize="96sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wlcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Welcome to OrDer"
        android:textColor="#EFE7E7"
        android:textSize="24sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/logo1" />

    <TextView
        android:id="@+id/wlcm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp"
        android:text="Enjoy your meal"
        android:textColor="#F3EBEB"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/wlcm"
        app:layout_constraintStart_toStartOf="@+id/wlcm"
        app:layout_constraintTop_toBottomOf="@+id/wlcm" />



    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="505dp"
        android:background="@drawable/custom_welcom" />

    <Button
        android:id="@+id/welcome_spl"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="500dp"
        android:background="#00000000"
        android:text="Get Started"
        android:textSize="20dp"
        android:textStyle="italic" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:src="@drawable/cooker" />


</RelativeLayout>